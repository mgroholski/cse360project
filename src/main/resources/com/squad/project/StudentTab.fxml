            <ToggleGroup fx:id="pizzaType" />
         </toggleGroup>
         <font>
            <Font size="30.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="vegetable" layoutX="111.0" layoutY="230.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="200.0" text="Vegetable">
         <toggleGroup>
            <ToggleGroup fx:id="pizzaType" />
         </toggleGroup>
         <font>
            <Font size="30.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="pepperoni" layoutX="111.0" layoutY="280.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="200.0" text="Pepperoni">
