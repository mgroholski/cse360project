            <Font size="30.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="olives" layoutX="111.0" layoutY="505.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="225.0" text="Olives">
         <font>
            <Font size="30.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="extraCheese" layoutX="111.0" layoutY="555.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="225.0" text="Extra Cheese">
         <font>
            <Font size="30.0" />
         </font>
      </CheckBox>
      <Button fx:id="addPizza" layoutX="125.0" layoutY="649.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Add Pizza" onAction="#addPizza">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="placeOrder" layoutX="500.0" layoutY="650.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Place Order">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="500.0" layoutY="120.0" prefHeight="50.0" prefWidth="200.0" text="Pizzas In Cart">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="removePizza" layoutX="500.0" layoutY="575.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Remove Pizza">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
