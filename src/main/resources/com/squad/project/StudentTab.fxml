<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.squad.project.view.studentTab.StudentTabController">
   <children>
      <ListView fx:id="studentPizzas" layoutX="420.0" layoutY="175.0" prefHeight="375.0" prefWidth="350.0" />
      <Label alignment="CENTER_RIGHT" layoutX="78.0" layoutY="125.0" prefHeight="37.0" prefWidth="232.0" text="Choose pizza type">
