            <ToggleGroup fx:id="pizzaType" />
         </toggleGroup>
         <font>
            <Font size="30.0" />
         </font>
      </RadioButton>
      <CheckBox fx:id="mushrooms" layoutX="111.0" layoutY="405.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="225.0" text="Mushrooms">
         <font>
            <Font size="30.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="onions" layoutX="111.0" layoutY="455.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="225.0" text="Onions">
